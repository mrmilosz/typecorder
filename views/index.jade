extend layout
block scripts
  script(type='text/javascript', src='/static/js/views/index.js')

block content
  .playback.section
    h2.heading.title Untitled recording
    textarea.display(readonly)
    button.play Play
    button.home Home

  form.recording.section(action='/', method='POST')
    h2.heading Please type something in the box and press save
    textarea(name='recording', placeholder='Recording')
    input(type='text', name='title', placeholder='Optional title')
    input(type='submit', value='Save')
    button.reset Reset
